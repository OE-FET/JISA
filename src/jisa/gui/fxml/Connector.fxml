<?xml version="1.0" encoding="UTF-8"?>

<?import com.sun.javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="pane" prefWidth="600.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <HBox fx:id="errorBox" alignment="CENTER_LEFT" managed="false" maxWidth="Infinity" spacing="5" style="-fx-background-color: brown; -fx-padding: 15px;" visible="false">
            <Label fx:id="errorText" maxHeight="12" maxWidth="Infinity" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
            <Button fx:id="errorButton" maxWidth="100" minWidth="100" text="Details..." HBox.hgrow="NEVER" />
            <Button fx:id="errorClose" maxWidth="30" minWidth="30" text="X" HBox.hgrow="NEVER" />
        </HBox>
    </top>

    <center>
        <VBox fx:id="vbox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="15.0" BorderPane.alignment="TOP_LEFT">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="15.0" VBox.vgrow="NEVER">
                <Label alignment="TOP_RIGHT" minWidth="75.0" text="Driver" HBox.hgrow="NEVER" />
                <ChoiceBox fx:id="driverChoice" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                <Label alignment="TOP_RIGHT" minWidth="50.0" text="Retries" HBox.hgrow="NEVER" />
                <IntegerField fx:id="retries" maxWidth="40.0" minWidth="40.0" HBox.hgrow="NEVER" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="15.0" VBox.vgrow="NEVER">
                <Label alignment="TOP_RIGHT" minWidth="75.0" text="Protocol" HBox.hgrow="NEVER" />
                <ChoiceBox fx:id="protocolChoice" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
            </HBox>
            <Separator prefWidth="200.0" />
            <GridPane fx:id="parameters" hgap="15" vgap="15">

            </GridPane>
        </VBox>
    </center>
    <left>
        <ImageView fx:id="icon" fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="TOP_LEFT">
            <BorderPane.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </BorderPane.margin>
            <Image url="@../images/smu.png" />
        </ImageView>
    </left>
    <bottom>
        <ButtonBar HBox.hgrow="NEVER">
            <buttons>
                <Button fx:id="removeButton" layoutX="313.0" layoutY="10.0" mnemonicParsing="false" text="Remove" visible="false" ButtonBar.buttonData="LEFT" />
                <Button fx:id="browseButton" layoutX="313.0" layoutY="10.0" mnemonicParsing="false" onAction="#browse" text="Browse..." ButtonBar.buttonData="RIGHT" />
                <Button fx:id="applyButton" layoutX="313.0" layoutY="10.0" mnemonicParsing="false" onAction="#apply" text="Apply" ButtonBar.buttonData="RIGHT" />
            </buttons>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </ButtonBar>
    </bottom>
</BorderPane>
